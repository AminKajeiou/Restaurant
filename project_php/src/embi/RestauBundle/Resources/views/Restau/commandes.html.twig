{% extends "base.html.twig" %}

{% block body %}
    <table class="table table-hover">
        <thead>
        <tr>
            <th>Commandes</th>
            <th>#</th>
            <th>Numero de table</th>
            <th>Sur place</th>
            <th>Date</th>
        </tr>
        </thead>
        <tbody>
        {% for commande in commandes %}
            <tr>
                <th scope="row"></th>
                <th>{{ commande.id }}</th>
                <td>{{ commande.numeroTable }}</td>
                <td>{{ commande.surPlace }}</td>
                <td>{{ commande.date | date('d-m-Y H:i:s') }}</td>
                <td>
                    <a href="commandes/voir/{{ commande.id }}" class="btn btn-success">Voir</a>
                    <a href="commandes/modifier/{{ commande.id }}" class="btn btn-default">Modifier</a>
                    <a href="commandes/supprimer/{{ commande.id }}" class="btn btn-danger">Supprimer</a>

                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="/commandes/creer" class="btn btn-success">Ajouter une nouvelle commande</a>
{% endblock %}